{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es6",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./cache.ts",
        "./checker-runtime.ts",
        "./checker.ts",
        "./defines.d.ts",
        "./deps.ts",
        "./helpers.ts",
        "./host.ts",
        "./index.ts",
        "./instance.ts",
        "./resolver.ts",
        "./tsconfig-utils.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
